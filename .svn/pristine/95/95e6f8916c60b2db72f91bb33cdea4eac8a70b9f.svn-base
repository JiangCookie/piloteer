		System.out.println("******2*********");
		int i=dao.delemp(7);
		System.out.println("******3*********"+i);
	}

	@Override
	public boolean login(String username,String password) {
		System.out.println("=========2===========");
		Map map=new HashMap();
		map.put("username", username);
		map.put("password", password);
		int i=dao.login(map);
		System.out.println("i="+i);
		
