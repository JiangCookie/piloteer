	@Override
	public Map getAlldept() {
		List list=dao.getAlldept();
		Map map=new HashMap();
		for(int i=0;i<list.size();i++){
			Map m=(Map)list.get(i);
			map.put(m.get("DEPTNO"), m.get("DNAME"));
			
		}
		
		
		return map;
	}

